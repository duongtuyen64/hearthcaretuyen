<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageMedicines"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginStart="20dp"
                android:src="@drawable/picture_thuoc"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"></ImageView>

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="-30dp"
                android:hint="Paracetamol"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageMedicines" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="-10dp"
                android:hint="0.99$"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageMedicines" />

            <ImageView
                android:id="@+id/ic_sao1"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_vector_sao"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageMedicines" />

            <ImageView
                android:id="@+id/ic_sao2"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_vector_sao"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageMedicines" />

            <ImageView
                android:id="@+id/ic_sao3"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_vector_sao"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageMedicines" />

            <ImageView
                android:id="@+id/ic_sao4"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_vector_nuasao"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageMedicines" />

            <ImageView
                android:id="@+id/ic_sao5"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="113dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_vector_saorong"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageMedicines" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>